# Environment Configuration Template
# Copy this file to .env and modify values as needed

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SESSION_TOKEN=your-session-token

# Serverless Configuration
STAGE=dev

# Optional: Custom Domain Configuration
# DOMAIN_NAME=api.yourdomain.com
# CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id

# Optional: Monitoring and Observability
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key

# Optional: Rate Limiting (if implemented)
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
# RATE_LIMIT_ENABLED=true

# Optional: CORS Configuration
# CORS_ORIGIN=https://your-frontend-domain.com
# CORS_CREDENTIALS=true

# Optional: Feature Flags
# ENABLE_SWAGGER_UI=true
# ENABLE_DEBUG_LOGGING=false

# Optional: Lambda Configuration Overrides
# LAMBDA_MEMORY_SIZE=512
# LAMBDA_TIMEOUT=30
# LAMBDA_RESERVED_CONCURRENCY=10

# Optional: Database Configuration (if using external storage)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://host:port

# Optional: External API Keys (for enhanced tools)
# WEATHER_API_KEY=your-weather-api-key
# OPENAI_API_KEY=your-openai-api-key